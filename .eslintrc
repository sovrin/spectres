{
    "env": {
        "amd": true,
        "browser": true,
        "node": true,
        "es6": true
    },
    "plugins": [
        "react"
    ],
    "extends": [
        "eslint:recommended",
        "plugin:react/recommended"
    ],
    "parser": "babel-eslint",
    "rules": {
        "class-methods-use-this": "off",
        "no-plusplus": "off",
        "no-unused-expressions": [
            "warn",
            {
                "allowShortCircuit": true,
                "allowTernary": true
            }
        ],
        "semi-style": "off",
        "arrow-parens": "off",
        "react/sort-comp": [
            0
        ],
        "react/no-children-prop": "off",
        "strict": 0,
        "indent": [
            "warn",
            4
        ]
    },
    "ecmaFeatures": {
        "experimentalObjectRestSpread": true,
        "experimentalDecorators": true,
        "experimentalClassProperties": true,
        "jsx": true
    },
    "parserOptions": {
        "ecmaVersion": 2017
    }
}
